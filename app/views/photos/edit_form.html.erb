<h1>Edit Photo <%= @id %></h1>

<form action="http://localhost:3000/update_photo/<%= @id %>>
  <div>
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" type="text" name="the_caption" value = "<%= Photo.find(@id).caption %>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="the_source"value = "<%= Photo.find(@id).source %>">
  </div>
  <div>
    <button>Update Photo</button>
  </div>
</form>
